<%= form_for [:admin, @product, Spree::SalePrice.new] do |f| %>
  <div data-hook="admin_sale_price_form">
    <fieldset data-hook="admin_sale_price_new_form">
      <legend><%=t 'spree.new_sale_price' %></legend>

      <%= render partial: 'form', locals: { f: f } %>

      <div class="form-buttons filter-actions actions" data-hook="buttons">
        <%= button_tag t('spree.actions.create'), class: 'btn btn-primary' %>
        <%= link_to t('spree.actions.cancel'), spree.admin_product_sale_prices_url(@product), class: 'button' %>
      </div>
    </fieldset>
  </div>
<% end %>

<div class="clear"></div>
